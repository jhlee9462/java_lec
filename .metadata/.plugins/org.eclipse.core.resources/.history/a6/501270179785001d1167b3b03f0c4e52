package step01_기초;

/*
 * + 기호의 의미
 * 1. 더하기
 * 2. 연결하기
 * 3. 단항연산자 (부호, ++)
 * 
 */

public class SumTest {

	public static void main(String[] args) {
		
		int a = 5, b = 7;
		System.out.println("a 는 " + a + " b 는 " + b);
		// 중간에 값을 끼워넣기 위해 원래 값을 적어서 문자열을 적은 뒤 "+변수+" 로 교체한다.
		System.out.println("a 는 "+a+", b 는 "+b);
		// 서로 다른 자료형일때 + 는 연결의 의미
		System.out.println(a + b); // 더하기
		System.out.println("a + b = "+a+b); // 더하기는 좌측부터 계산하기 때문에 연결하기로 동작한다.
		System.out.println("a + b = "+(a+b));
		
	}

}
